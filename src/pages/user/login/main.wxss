#login-type {
  padding: 0 15px;
}
#login-type .phone__warning {
  text-align: center;
  width: 80px;
  height: 80px;
  margin: 80px auto 180px auto;
  border-radius: 100%;
  overflow: hidden;
}
#login-type .phone__warning image {
  width: 100%;
  height: 100%;
}
#login-type .phone__warning i {
  color: #FFBE00;
  font-size: 50px;
}
#login-type .phone__text {
  font-size: 14px;
  color: #888888;
  line-height: 20px;
  margin-bottom: 32px;
}
#login-type .phone__btn {
  width: 100%;
  padding: 15px 0;
  line-height: 1;
  font-size: 17px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 3px;
}
#login-type .phone__btn.wechat-phoneBtn {
  color: #FFFFFF;
  background: #004E9D;
  margin-bottom: 20px;
}
#login-type .phone__btn.again-phoneBtn {
  color: #004E9D;
  background: #ffffff;
  border: 1px solid #004E9D;
}
#login-type .phone__btn:after {
  border: none;
}
#login-type .phone__btn i {
  padding-right: 10px;
}
#login-type .getUser {
  opacity: 0;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 0;
}
